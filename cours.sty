% tableau
\newenvironment{tableau}
{
\begin{tcolorbox}[colback=black!10, colframe=white,
       right=3pt, top=5pt, bottom=5pt, 
       colbacktitle=white, coltitle=black,
       before=\beforespace, after=\afterspace,
       title=\faChalkboardTeacher\ Au tableau, 
       fonttitle=\bfseries]
}
{
\end{tcolorbox}
}

\newenvironment{eqn}[1]
{
\begin{tcolorbox}[colback=white, colframe=equation,
       right=3pt, top=5pt, bottom=5pt, 
       colbacktitle=white, coltitle=equation,
       before=\beforespace, after=\afterspace,
       attach boxed title to top left={xshift=2mm, yshift=-3mm},
       boxed title style = {colframe=white},
       title=\faSquareRoot* \ #1, fonttitle=\bfseries]
}
{
\end{tcolorbox}
}

\newenvironment{application}
{
\begin{tcolorbox}[  
       enhanced, frame hidden,
       interior hidden, 
       coltitle=application,
       title=\faBatteryHalf\ Application, 
       fonttitle=\bfseries,
       borderline west=
       {2pt}{1pt}{application}
       ] 
}
{
\end{tcolorbox}
}

